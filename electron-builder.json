{
  "appId": "com.forcelab.forcedesk",
  "productName": "ForceDesk",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "!dist/*.{dmg,zip,blockmap,exe,AppImage,deb,rpm}",
    "!dist/mac",
    "!dist/mac-arm64",
    "!dist/linux-unpacked",
    "!dist/win-unpacked",
    "dist-electron/**/*",
    "package.json"
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64"]
      },
      {
        "target": "zip",
        "arch": ["arm64"]
      }
    ],
    "category": "public.app-category.utilities",
    "icon": "build/icon.icns"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "electronLanguages": ["zh-TW", "en"],
  "asar": true,
  "asarUnpack": [],
  "compression": "maximum",
  "afterPack": "./scripts/afterPack.cjs"
}
